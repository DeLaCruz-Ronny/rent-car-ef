@model V2.Models.Marca
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row mt-5">
    <div class="col-sm-4">
        <form asp-action="Create" asp-controller="Marca" method="post">
            <div class="mb-2">
                <label class="form-label" asp-for="IdMarca">Nombre</label>
                <input class="form-control form-control-sm" asp-for="Descripcion" type="text" />
            </div>


            <button class="btn btn-primary btn-sm" type="submit">Crear</button>
        </form>
    </div>
</div>

