@model List<V2.Models.Categorium>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mt-4">
     <div class="card-header">
        <i class="fa-solid fa-boxes-stacked"></i> Categoria
     </div>
     <div class="card-body">
         <a class="btn btn-success" asp-action="Create" asp-controller="Categoria" ><i class="fa-solid fa-file-circle-plus"></i></a>
         <hr />

         <table class="table table-striped">
             <thead>
                 <tr>
                     <th>Categoria</th>
                 </tr>
             </thead>
             <tbody>
                 @foreach (var item in Model)
                 {
                     <tr>
                         <td>@item.Descripcion</td>
                         <td>
                             <a class="btn btn-primary btn-sm" asp-action="Edit" asp-controller="Categoria" asp-route-IdCategoria="@item.IdCategoria"><i class="fa-solid fa-user-pen"></i></a> |
                             <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Categoria" asp-route-IdCategoria="@item.IdCategoria"><i class="fa-solid fa-trash-can"></i></a>
                         </td>
                     </tr>
                 }
             </tbody>
         </table>
     </div>
</div>
