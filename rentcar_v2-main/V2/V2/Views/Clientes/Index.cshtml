@model List<V2.Models.Cliente>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card mt-4">
     <div class="card-header">
         <i class="fas fa-users"></i> Clientes
     </div>
     <div class="card-body">
         <a class="btn btn-success" asp-action="Create" asp-controller="Clientes" ><i class="fa-solid fa-user-plus"></i></a>
         <hr />

         <table class="table table-striped">
             <thead>
                 <tr>
                     <th>Nombre</th>
                     <th>Telefono</th>
                     <th>Acciones</th>
                 </tr>
             </thead>
             <tbody>
                 @foreach (var item in Model)
                 {
                     <tr>
                         <td>@item.Nombre</td>
                         <td>@item.Telefono</td>
                         <td>
                             <a class="btn btn-primary btn-sm" asp-action="Edit" asp-controller="Clientes" asp-route-IdCliente="@item.IdCliente"><i class="fa-solid fa-user-pen"></i></a> |
                             <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Clientes" asp-route-IdCliente="@item.IdCliente"><i class="fa-solid fa-trash-can"></i></a>
                         </td>
                     </tr>
                 }
             </tbody>
         </table>
     </div>
</div>
