@model List<V2.Models.Modelo>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mt-4">
     <div class="card-header">
       <i class="fa-solid fa-object-group"></i> Modelo
     </div>
     <div class="card-body">
         <a class="btn btn-success" asp-action="Create" asp-controller="Modelo" ><i class="fa-solid fa-object-group"></i></a>
         <hr />

         <table class="table table-striped">
             <thead>
                 <tr>
                     <th>Modelo</th>
                 </tr>
             </thead>
             <tbody>
                 @foreach (var item in Model)
                 {
                     <tr>
                         <td>@item.Descripcion</td>
                         <td>
                             <a class="btn btn-primary btn-sm" asp-action="Edit" asp-controller="Modelo" asp-route-IdModelo="@item.IdModelo"><i class="fa-solid fa-user-pen"></i></a> |
                             <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Modelo" asp-route-IdModelo="@item.IdModelo"><i class="fa-solid fa-trash-can"></i></a>
                         </td>
                     </tr>
                 }
             </tbody>
         </table>
     </div>
</div>
