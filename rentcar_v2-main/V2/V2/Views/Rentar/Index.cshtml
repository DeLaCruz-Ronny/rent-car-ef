@model List<V2.Models.Rentar>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card mt-4">
     <div class="card-header">
       <i class="fa-solid fa-shop"></i> Rentar
     </div>
     <div class="card-body">
         <a class="btn btn-success" asp-action="Create" asp-controller="Rentar" ><i class="fa-solid fa-shop"></i></a>
         <hr />

         <table class="table table-striped">
             <thead>
                 <tr>
                     <th>Cliente</th>
                     <th>Marca</th>
                     <th>Modelo</th>
                     <th>Categoria</th>
                     <th>Fecha Rentado</th>
                     <th>Fecha Regreso</th>
                 </tr>
             </thead>
             <tbody>
                 @foreach (var item in Model)
                 {
                     <tr>
                         <td>@item.oCliente.Nombre</td>
                         <td>@item.oMarca.Descripcion</td>
                         <td>@item.oModelo.Descripcion</td>
                         <td>@item.oCategoria.Descripcion</td>
                         <td>@item.FechaRentado</td>
                         <td>@item.FechaRetorno</td>
                         <td>
                             <a class="btn btn-primary btn-sm" asp-action="Edit" asp-controller="Rentar" asp-route-IdRentar="@item.IdRentar"><i class="fa-solid fa-user-pen"></i></a> |
                             <a class="btn btn-danger btn-sm" asp-action="Delete" asp-controller="Rentar" asp-route-IdRentar="@item.IdRentar"><i class="fa-solid fa-trash-can"></i></a>
                         </td>
                     </tr>
                 }
             </tbody>
         </table>
     </div>
</div>
